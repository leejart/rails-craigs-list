<%= form_for([@category, @post]) do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %> <br>
    <%= f.text_field :content %>
  </p>

  <p>
    <%= f.label :price %> <br>
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>